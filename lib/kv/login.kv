#: import utils kivy.utils
<LoginScreen>:
    name: 'login'
    MDCard:
        orientation: 'vertical'
        size_hint: None, None
        width: dp(400)
        height: dp(500)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: dp(10)
        padding: dp(25)
        spacing: dp(25)
        MDLabel:
            text: 'WELCOME'
            font_size: dp(35)
            halign: 'center'
            size_hint: 1, None
            height: self.texture_size[1]
        Widget:
            size_hint: 1, None
            height: dp(10)
        MDTextField:
            id: user_input
            hint_text: 'Username'
            helper_text: "Please Enter your Username"
            helper_text_mode: "on_focus"
            icon_right: 'account'
            write_tab: False
            size_hint_x: None
            width: dp(270)
            font_size: 16
            pos_hint: {'center_x': .5}
        MDTextField:
            id: pass_input
            hint_text: 'Password'
            helper_text: "Please Enter your Password"
            helper_text_mode: "on_focus"
            icon_right: 'eye-off'
            password: True
            write_tab: False
            size_hint_x: None
            width: dp(270)
            font_size: 16
            pos_hint: {'center_x': .5}
        MDRoundFlatButton:
            text: 'Login'
            font_size: 12
            size_hint: None, None
            width: dp(60) 
            pos_hint: {'center_x': .5}
            on_press: root.on_login()
        Widget:
            size_hint_y: None
            height: dp(30)
        MDLabel:
            text: "Don't have an account yet?"
            font_size: dp(14)
            halign: 'center'
            size_hint: 1, None
            height: self.texture_size[1]
        MDRoundFlatButton:
            text: 'Sign Up'
            font_size: 12
            pos_hint: {'center_x': .5}
            on_press: root.manager.current = 'signup'