#: import utils kivy.utils
<LoginScreen>:
    name: 'login'
    MDCard:
        orientation: 'vertical'
        size_hint: None, None
        width: dp(400)
        height: dp(460)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: dp(10)
        padding: dp(25)
        spacing: dp(10)
        MDLabel:
            text: 'Login'
            font_size: dp(32)
            halign: 'center'
            size_hint: 1, None
            height: self.texture_size[1]
        MDTextField:
            id: user_input
            hint_text: 'Username'
            helper_text: "Please Enter your Username"
            helper_text_mode: "on_focus"
            icon_right: 'account'
            icon_right_color: 1, 1, 1, 1
            write_tab: False
            size_hint_x: None
            width: dp(270)
            font_size: 16
            pos_hint: {'center_x': .5}
        MDTextField:
            id: pass_input
            hint_text: 'Password'
            helper_text: "Please Enter your Password"
            helper_text_mode: "on_focus"
            icon_right: 'eye-off'
            icon_right_color: 1, 1, 1, 1
            password: True
            write_tab: False
            size_hint_x: None
            width: dp(270)
            font_size: 16
            pos_hint: {'center_x': .5}
        RelativeLayout:
            size_hint: 1, None
            height: dp(50)
            MDCheckbox:
                id: remember_me_checkbox
                size_hint: None, None
                size: dp(34), dp(34)
                pos: dp(95), dp(24)
                active: False
            MDLabel:
                text: 'Remember me'
                font_size: dp(14)
                halign: 'center'
                pos: dp(0), dp(32)
                size_hint: 1, None
                height: self.texture_size[1]
        RelativeLayout:
            size_hint: 1, None
            height: dp(40)
            MDRoundFlatButton:
                id: login_button
                text: 'Login'
                font_size: 12
                pos_hint: {'center_x': 0.34, 'center_y': 1}
                on_release: root.on_login()
            MDRoundFlatButton:
                id: guest_mode
                text: 'Enter as Guest'
                font_size: 12
                pos_hint: {'center_x': .66, 'center_y': 1}
                on_release: root.on_login()
        Widget:
            size_hint: 1, None
            height: dp(25)
        MDSpinner:
            id: loading_spinner
            size_hint: None, None
            size: dp(24), dp(24)
            pos_hint: {'center_x':.5}
            active: False
        MDLabel:
            id: connection_status
            text: ""
            font_size: dp(14)
            halign: 'center'
            size_hint: 1, None
            height: self.texture_size[1]
        MDLabel:
            text: "Don't have an account yet?"
            font_size: dp(14)
            halign: 'center'
            size_hint: 1, None
            height: self.texture_size[1]
        MDRoundFlatButton:
            text: 'Sign Up'
            font_size: 12
            pos_hint: {'center_x': .5}
            on_release: root.manager.current = 'signup'