#: import utils kivy.utils
<LoginScreen>:
    name: 'login'
    MDCard:
        orientation: 'vertical'
        size_hint: None, None
        width: dp(400)
        height: dp(500)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: dp(10)
        padding: dp(15)
        spacing: dp(20)
        MDLabel:
            text: 'Welcome'
            font_size: dp(35)
            halign: 'center'
            size_hint: 1, None
            height: self.texture_size[1]
        MDLabel:
            text: "Login your Guardian's Username and Password"
            font_size: dp(14)
            halign: 'center'
            size_hint: 1, None
            height: self.texture_size[1]
        MDTextField:
            id: user_input
            hint_text: 'Username'
            helper_text: "Please Enter your Username"
            helper_text_mode: "on_focus"
            icon_right: 'account'
            icon_right_color: 1, 1, 1, 1
            write_tab: False
            size_hint_x: None
            width: dp(270)
            font_size: 16
            pos_hint: {'center_x': .5}
        MDTextField:
            id: pass_input
            hint_text: 'Password'
            helper_text: "Please Enter your Password"
            helper_text_mode: "on_focus"
            icon_right: 'eye-off'
            icon_right_color: 1, 1, 1, 1
            password: True
            write_tab: False
            size_hint_x: None
            width: dp(270)
            font_size: 16
            pos_hint: {'center_x': .5}
        RelativeLayout:
            MDCheckbox:
                id: remember_me_checkbox
                size_hint: None, None
                size: dp(38), dp(38)
                pos: dp(95), dp(2)
                active: False
            MDLabel:
                text: 'Remember me'
                font_size: dp(16)
                halign: 'center'
                size_hint: 1, 1
                height: self.texture_size[1]
        RelativeLayout:
            MDRoundFlatButton:
                id: login_button
                text: 'Login'
                font_size: 12
                # pos_hint: {'center_x': .34, 'center_y': 0}
                pos_hint: {'center_x': 0.34, 'center_y': 1}
                on_press: root.on_login()
            MDRoundFlatButton:
                id: guest_mode
                text: 'Enter as Guest'
                font_size: 12
                # pos_hint: {'center_x': .64, 'center_y': .04}
                pos_hint: {'center_x': .64, 'center_y': 1}
                on_press: root.on_login()
        MDSpinner:
            id: loading_spinner
            size_hint: None, None
            size: dp(24), dp(12)
            pos_hint: {'center_x':.5}
            active: False
        MDLabel:
            text: "Don't have an account yet?"
            font_size: dp(14)
            halign: 'center'
            size_hint: 1, None
            height: self.texture_size[1]
        MDRoundFlatButton:
            text: 'Sign Up'
            font_size: 12
            pos_hint: {'center_x': .5}
            on_press: root.manager.current = 'signup'