<AdditionScreen>:
    name: 'addition'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: add_label
        TextInput:
            id: add_ans_input
            hint_text: 'Enter answer'
        Button:
            text: 'submit'
            on_press: root.validate_ans()
        Button:
            text: 'back'
            on_press: root.manager.current = 'menu'
        

