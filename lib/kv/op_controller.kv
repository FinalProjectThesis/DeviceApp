<AdditionScreen>:
    name: 'addition'
    BoxLayout:
        padding: dp(15)
        orientation: 'vertical'
        RelativeLayout:
            size_hint: 1, .15
            MDIconButton:
                icon: 'backspace'
                theme_text_color: 'Custom'
                text_color: [1, 0, 0, 1]
                pos_hint: {'right': 1, 'top': 1}
                on_release: root.on_exit()
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .35 
            Label:
                id: qcount_label
                size_hint: 1, None
                font_size: dp(15)
                height: self.texture_size[1]
            Label:
                id: add_label
                size_hint: 1, .95
                font_size: dp(50)
        BoxLayout:
            size_hint: 1, .6
            spacing: dp(15)
            padding: dp(15)
            MDCard:
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(15)
                size_hint: .25, 1
                MDLabel:
                    text: 'Thousands'
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign: 'center'
                    pos_hint: {'top': 1}
                TextInput:
                    id: thousands_input
                    font_size: dp(35)
            MDCard:
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(15)
                size_hint: .25, 1
                MDLabel:
                    text: 'Hundreds'
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign: 'center'
                    pos_hint: {'top': 1}
                TextInput:
                    id: hundreds_input
                    font_size: dp(35)
            MDCard:
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(15)
                size_hint: .25, 1
                MDLabel:
                    text: 'Tens'
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign: 'center'
                    pos_hint: {'top': 1}
                TextInput:
                    id: tens_input
                    font_size: dp(35)
            MDCard:
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(15)
                size_hint: .25, 1
                MDLabel:
                    text: 'Ones'
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign: 'center'
                    pos_hint: {'top': 1}
                TextInput:
                    id: ones_input
                    font_size: dp(35)
        Button:
            text: 'SUBMIT'
            background_normal: ''
            background_color: 0, 128/255, 128/255
            size_hint: 500/root.width, 60/root.height
            pos_hint: {'center_x': .5}
            on_release: root.validate_ans()
        
<SubtractionScreen>:
    name: 'subtraction'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: sub_label
        Button:
            text: 'Subtraction Page'
            on_release: root.manager.current = 'menu'

<MultiplicationScreen>:
    name: 'multiplication'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: multi_label
        Button:
            text: 'Multiplication Page'
            on_release: root.manager.current = 'menu'

<DivisionScreen>:
    name: 'division'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: div_label
        Button:
            text: 'Division Page'
            on_release: root.manager.current = 'menu'

<ResultScreen>:
    name: 'result'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: result_label
        MDFlatButton:
            text: 'Submit Answers'
            on_release: root.on_submit()

<CorrectScreen>:
    name: 'correct'
    canvas.before:
        Color:
            rgb: (0, 1, 0)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: dp(25)
        spacing: dp(25)
        MDLabel:
            id: correct_label
            text: 'Correct!'
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0
            font_size: dp(80)
        Button:
            text: 'Next Question'
            font_size: dp(56)
            background_normal: ''
            background_color: 244/255, 67/255, 54/255
            size_hint: 560/root.width, 140/root.height
            pos_hint: {'center_x': .5}
            on_release: root.manager.current = 'addition'

<WrongScreen>:
    name: 'wrong'
    canvas.before:
        Color:
            rgb: (1, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: wrong_label
            font_size: dp(60)
        Button:
            text: 'Next Question'
            on_release: root.manager.current = 'addition'