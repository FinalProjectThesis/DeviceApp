<AdditionScreen>:
    name: 'addition'
    BoxLayout:
        padding: dp(15)
        orientation: 'vertical'
        RelativeLayout:
            size_hint: 1, .15
            MDIconButton:
                icon: 'backspace'
                theme_text_color: 'Custom'
                text_color: [1, 0, 0, 1]
                pos_hint: {'right': 1, 'top': 1}
                on_release: root.on_exit()
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 1, .35 
            MDLabel:
                id: qcount_label
                size_hint: 1, None
                font_size: dp(15)
                height: self.texture_size[1]
                halign: 'center'
            MDLabel:
                id: add_label
                size_hint: 1, .95
                font_size: dp(50)
                halign: 'center'
        BoxLayout:
            size_hint: 1, .6
            spacing: dp(15)
            padding: dp(15)
            MDCard:
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(15)
                size_hint: .25, 1
                MDLabel:
                    text: 'Thousands'
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign: 'center'
                    pos_hint: {'top': 1}
                TextInput:
                    id: thousands_input
                    font_size: dp(35)
            MDCard:
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(15)
                size_hint: .25, 1
                MDLabel:
                    text: 'Hundreds'
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign: 'center'
                    pos_hint: {'top': 1}
                TextInput:
                    id: hundreds_input
                    font_size: dp(35)
            MDCard:
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(15)
                size_hint: .25, 1
                MDLabel:
                    text: 'Tens'
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign: 'center'
                    pos_hint: {'top': 1}
                TextInput:
                    id: tens_input
                    font_size: dp(35)
            MDCard:
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(15)
                size_hint: .25, 1
                MDLabel:
                    text: 'Ones'
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign: 'center'
                    pos_hint: {'top': 1}
                TextInput:
                    id: ones_input
                    font_size: dp(35)
        Button:
            text: 'SUBMIT'
            font_size: dp(26)
            background_normal: ''
            background_color: 0, 128/255, 128/255
            size_hint: 500/root.width, 60/root.height
            pos_hint: {'center_x': .5}
            on_release: root.validate_ans()
        
<SubtractionScreen>:
    name: 'subtraction'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: sub_label
        Button:
            text: 'Subtraction Page'
            on_release: root.manager.current = 'menu'
        Button:
            id: t1

<MultiplicationScreen>:
    name: 'multiplication'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: multi_label
        Button:
            text: 'Multiplication Page'
            on_release: root.manager.current = 'menu'
        Button:
            id: t2

<DivisionScreen>:
    name: 'division'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: div_label
        Button:
            text: 'Division Page'
            on_release: root.manager.current = 'menu'
        Button:
            id: t3

<ResultScreen>:
    name: 'result'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: result_label
            color: 0, 0, 0, 1
        MDFlatButton:
            text: 'Submit Answers'
            on_release: root.on_submit()

<CorrectScreen>:
    name: 'correct'
    MDCard:
        id: md_card
        orientation: 'vertical'
        size_hint: None, None
        width: root.width - 40
        height: root.height - 40
        pos_hint: {'center_x': .5, 'center_y': .5}
        md_bg_color: 167/255, 244/255, 50/255, 1
        elevation: 10
        padding: dp(25)
        spacing: dp(25)
        MDLabel:
            id: correct_label
            text: 'Correct!'
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0
            font_size: dp(80)
            Image:
                id: gif
                source: 'assets/anims/congrats.gif'
                center: root.center
                size_hint: None, None
                width: md_card.width
                height: md_card.height
                allow_stretch: True
                anim_delay: -1
                repeat: True
        Button:
            text: 'Next Question'
            font_size: dp(56)
            background_normal: ''
            background_color: 244/255, 67/255, 54/255
            size_hint: 560/root.width, 140/root.height
            pos_hint: {'center_x': .5}
            on_release: root.manager.current = 'addition'; gif.anim_delay = -1

<WrongScreen>:
    name: 'wrong'
    MDCard:
        id: md_card
        orientation: 'vertical'
        size_hint: None, None
        width: root.width - 40
        height: root.height - 40
        pos_hint: {'center_x': .5, 'center_y': .5}
        md_bg_color: 237/255, 41/255, 57/255, 1
        elevation: 10
        padding: dp(15)
        spacing: dp(15)
        MDLabel:
            id: wrong_label
            halign: 'center'
            pos_hint: {'top': 1}
            size_hint: 1, None
            height: self.texture_size[1]
            font_size: dp(24)
            markup: True
        MDCard:
            radius: [dp(15), dp(15), dp(15), dp(15)]
            elevation: 10
            padding: dp(5)
            orientation: 'vertical'
            BoxLayout:
                GridLayout:
                    id: first_grid
                    rows: 3
                    size_hint: .5, 1                    
                MDLabel:
                    text: '+'
                    font_size: dp(36)
                    size_hint: None, None
                    width: self.texture_size[1]
                    height: self.texture_size[1]
                    halign: 'center'
                    pos_hint: {'center_y': .5}
                GridLayout:
                    id: second_grid
                    rows: 3
                    size_hint: .5, 1                    
                MDLabel:
                    text: '='
                    font_size: dp(36)
                    size_hint: None, None
                    width: self.texture_size[1]
                    height: self.texture_size[1]
                    halign: 'center'
                    pos_hint: {'center_y': .5}
                GridLayout:
                    id: sum_grid
                    rows: 3
                    size_hint: .5, 1
            BoxLayout:
                size_hint: 1, .1
                MDLabel:
                    id: val1_label
                    size_hint: .5, 1
                    halign: 'center'
                Widget:
                    size_hint: None, 1
                    width: dp(43)
                MDLabel:
                    id: val2_label
                    size_hint: .5, 1
                    halign: 'center'
                Widget:
                    size_hint: None, 1
                    width: dp(43)
                MDLabel:
                    id: sum_label
                    size_hint: .5, 1
                    halign: 'center'
                    markup: True

        Button:
            text: 'Next Question'
            font_size: dp(32)
            background_normal: ''
            background_color: 249/255, 129/255, 42/255
            size_hint: 520/root.width, 90/root.height
            pos_hint: {'center_x': .5}
            on_release: root.manager.current = 'addition'