<AdditionScreen>:
    name: 'addition'
    BoxLayout:
        padding: dp(15)
        orientation: 'vertical'
        RelativeLayout:
            size_hint: 1, .1
            Button:
                text: 'Exit'
                background_color: (1, 0, 0, 1)
                size_hint: None, .5
                width: dp(90)
                pos_hint: {'right': 1, 'top': 1}
                on_press: root.on_exit()
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .4 
            Label:
                size_hint: 1, .05
                id: qcount_label
                font_size: dp(15)
            Label:
                size_hint: 1, .95
                id: add_label
                font_size: dp(50)
        BoxLayout:
            size_hint: 1, .4 
            orientation: 'vertical'
            BoxLayout:
                size_hint: 1, .05
                Label:
                    text: 'Thousands'
                Label:
                    text: 'Hundreds'
                Label:
                    text: 'Tens'
                Label:
                    text: 'Ones'
            BoxLayout:
                size_hint: 1, .95
                spacing: dp(15)
                padding: dp(20)
                TextInput:
                    id: thousands_input
                    hint_text: 'Thousands'
                    font_size: dp(80)
                    padding: dp(40)
                TextInput:
                    id: hundreds_input
                    hint_text: 'Hundreds'
                    font_size: dp(80)
                    padding: dp(40)
                TextInput:
                    id: tens_input
                    hint_text: 'Tens'
                    font_size: dp(80)
                    padding: dp(40)
                TextInput:
                    id: ones_input
                    hint_text: 'Ones'
                    font_size: dp(80)
                    padding: dp(40)
        Button:
            size_hint: None, .1
            width: dp(500)
            pos_hint: {'center_x': .5}
            text: 'submit'
            on_press: root.validate_ans()
        

<SubtractionScreen>:
    name: 'subtraction'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: sub_label
        Button:
            text: 'Subtraction Page'
            on_press: root.manager.current = 'menu'

<MultiplicationScreen>:
    name: 'multiplication'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: multi_label
        Button:
            text: 'Multiplication Page'
            on_press: root.manager.current = 'menu'

<DivisionScreen>:
    name: 'division'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: div_label
        Button:
            text: 'Division Page'
            on_press: root.manager.current = 'menu'

<ResultScreen>:
    name: 'result'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: result_label
        Button:
            text: 'Results'
            on_press: root.manager.current = 'menu'

<CorrectScreen>:
    name: 'correct'
    canvas.before:
        Color:
            rgb: (0, 1, 0)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: correct_label
            text: 'Correct!'
            font_size: dp(80)
        Button:
            text: 'Next Question'
            on_press: root.manager.current = 'addition'

<WrongScreen>:
    name: 'wrong'
    canvas.before:
        Color:
            rgb: (1, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: wrong_label
            font_size: dp(60)
        Button:
            text: 'Next Question'
            on_press: root.manager.current = 'addition'