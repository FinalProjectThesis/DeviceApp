#:import Factory kivy.factory.Factory
<ChildListScreen>:
    name: 'childlist'
    Image:
        source: 'assets/images/studentlist_background.jpg'
        allow_stretch: True
        keep_ratio: False
        size: self.texture_size
        repeat: True
    MDSpinner:
        id: loading_spinner
        line_width: dp(3.5)
        size_hint: .1, .1
        pos_hint: {'center_x':.5, 'center_y': .5}
        active: True
    Label:
        text: "test"
    BoxLayout:
        id: main_layout
        orientation: 'vertical'
        Image:
            source: "assets/images/Whos_Learning.png"
            size_hint: 1, .5
        ScrollView:
            id: scroll_view
            size_hint_y: 1
            BoxLayout:
                id: scroll_button
                size_hint: None, 1
                width: self.minimum_width
                padding: dp(15)
                spacing: dp(20)
        AnchorLayout:
            size_hint: 1, .3
            anchor_x: 'right'
            anchor_y: 'bottom'
            padding: dp(15)
            MDRaisedButton:
                spacing: dp(20)
                text: 'Logout'
                md_bg_color: .8, 0, 0, 1
                on_release: root.on_logout()
            RelativeLayout:
                MDFloatingActionButton:
                    icon: 'refresh'
                    type: 'small'
                    user_font_size: dp(32)
                    theme_text_color: "Custom"
                    md_bg_color: app.theme_cls.primary_color
                    on_release: root.on_refresh()
