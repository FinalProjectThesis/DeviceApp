#: import utils kivy.utils
<SignupScreen>:
    name: 'signup'
    MDCard:
        orientation: 'vertical'
        size_hint: None, None
        width: dp(680)
        height: dp(500)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: dp(10)
        padding: dp(25)
        spacing: dp(25)
        MDLabel:
            text: 'Sign Up'
            font_size: dp(35)
            halign: 'center'
            size_hint: 1, None
            height: self.texture_size[1]
        MDLabel:
            text: 'Input all parameters accordingly'
            font_size: dp(14)
            halign: 'center'
            size_hint: 1, None
            height: self.texture_size[1]
        Widget:
            size_hint_y: None
            height: dp(30)
        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                MDTextField:
                    id: user_input
                    hint_text: 'Username'
                    helper_text_mode: "on_error"
                    write_tab: False
                    size_hint_x: None
                    width: dp(270)
                    font_size: 16
                MDTextField:
                    id: pass_input
                    hint_text: 'Password'
                    helper_text_mode: "on_error"
                    write_tab: False
                    size_hint_x: None
                    width: dp(270)
                    font_size: 16
                MDTextField:
                    id: confirmpass_input
                    hint_text: 'Confirm Password'
                    helper_text_mode: "on_error"
                    write_tab: False
                    size_hint_x: None
                    width: dp(270)
                    font_size: 16
            BoxLayout:
                orientation: 'vertical'
                Widget:
                    size_hint: 1, None
                    height: dp(5)
                MDTextField:
                    id: first_input
                    hint_text: 'First name'
                    helper_text_mode: "on_error"
                    write_tab: False
                    size_hint_x: None
                    width: dp(270)
                    font_size: 16
                MDTextField:
                    id: last_input
                    hint_text: 'Last name'
                    helper_text_mode: "on_error"
                    write_tab: False
                    size_hint_x: None
                    width: dp(270)
                    font_size: 16
                Widget:
                    size_hint_y: None
                    height: dp(52)
        
        MDSpinner:
            id: loading_spinner
            size_hint:None, None
            size: dp(26),dp(26)
            pos_hint: {'center_x':.5}
            active: False
        MDRoundFlatButton:
            id: signup_button
            text: 'Sign Up'
            font_size: 12
            size_hint: None, None
            width: dp(60) 
            pos_hint: {'center_x': .5}
            on_press: root.on_register()
        Widget:
            size_hint: 1, None
            height: dp(20)
        MDRaisedButton:
            spacing: dp(20)
            text: 'Back'
            md_bg_color: .8, 0, 0, 1
            pos_hint: {'right': 1}
            on_press: root.manager.current = 'login'