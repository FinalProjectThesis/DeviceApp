#:import hex kivy.utils.get_color_from_hex
<MenuScreen>:
    name: 'menu'
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            id: menu_toolbar
            title: 'Top Bar'
            left_action_items: [['account-circle']]
            right_action_items: [['logout', lambda x: root.on_exit()]]
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .8
            padding: dp(20)
            spacing: dp(15)
            MDLabel:
                text: 'Choose your Operation to Learn!'
                font_size: dp(20)
                halign: 'center'
                size_hint: 1, None
                height: self.texture_size[1]
            GridLayout:
                spacing: dp(10)
                rows: 2
                cols: 2
                Button:
                    background_normal: ''
                    background_color: 244/255, 67/255, 54/255
                    on_press: root.on_addition(); root.manager.current = 'difficulty'
                    Image:
                        source: 'assets/images/addition.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                    
                Button:
                    background_normal: ''
                    background_color: 33/255, 150/255, 243/255
                    on_press: root.on_subtraction(); root.manager.current = 'difficulty'
                    Image:
                        source: 'assets/images/subtraction.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                Button:
                    background_normal: ''
                    background_color: 0, 86/255, 1
                    on_press: root.on_multiplication(); root.manager.current = 'difficulty'
                    Image:
                        source: 'assets/images/multiplication.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                Button:
                    background_normal: ''
                    background_color: 255/255, 103/255, 43/255
                    on_press: root.on_division(); root.manager.current = 'difficulty'
                    Image:
                        source: 'assets/images/division.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
        
<DifficultyScreen>:
    name: 'difficulty'
    MDCard:
        orientation: 'vertical'
        size_hint: None, None
        width: dp(680)
        height: dp(460)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: dp(10)
        padding: dp(20)
        spacing: dp(20)
        MDLabel:
            id: op_label
            font_size: dp(20)
            halign: 'center'
            size_hint: 1, None
            height: self.texture_size[1]
        MDLabel:
            text: 'Choose your difficulty!'
            font_size: dp(25)
            set_size: 500, 100
            halign: 'center'
            size_hint: 1, None
            height: self.texture_size[1]
        MDRaisedButton:
            text: "EASY"
            font_size: dp(40)
            width: root.width*0.55
            pos_hint: {'center_x': .5}
            on_press: root.on_easy()
        MDRaisedButton:
            text: 'MEDIUM'
            md_bg_color: 230/255, 178/255, 15/255, 1
            font_size: dp(40)
            width: root.width*0.55
            pos_hint: {'center_x': .5}
            on_press: root.on_medium()
        MDRaisedButton:
            text: 'HARD'
            md_bg_color: 237/255, 41/255, 57/255, 1
            font_size: dp(40)
            width: root.width*0.55
            pos_hint: {'center_x': .5}
            on_press: root.on_hard()
        Widget:
            size_hint: 1, None
            height: dp(5)
        MDIconButton:
            icon: 'backspace'
            theme_text_color: 'Custom'
            text_color: [1, 0, 0, 1]
            pos_hint: {'right': 1}
            on_press: root.manager.current = 'menu'
