<MenuScreen>:
    name: 'menu'
    BoxLayout:
        orientation: 'vertical'
        RelativeLayout:
            size_hint: 1, .2
            Button:
                text: 'Top Bar'
                # size_hint: 1, .2
                pos_y: 'top'
        BoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            Label:
                text: 'Learn'
                font_size: dp(20)
                size_hint: 1, .1
            StackLayout:
                id: main_bar
                padding: dp(20)
                spacing: dp(5)
                Button:
                    text: 'Addition'
                    size_hint: .5, .5
                    on_press: root.manager.current = 'addition'
                Button:
                    text: 'Subtraction'
                    size_hint: .5, .5
                    on_press: root.manager.current = 'subtraction'
                Button:
                    text: 'Multiplication'
                    size_hint: .5, .5
                    on_press: root.manager.current = 'login'
                Button:
                    text: 'Divison'
                    size_hint: .5, .5
                    on_press: root.manager.current = 'division'