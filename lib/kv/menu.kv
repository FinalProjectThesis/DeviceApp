<DifficultyScreen>:
    name: 'difficulty'
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .3
            Label:
                id: op_label
                font_size: dp(20)
                size_hint: 1, .4
            Label:
                text: 'Choose your difficulty'
                font_size: dp(25)
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .7
            spacing: dp(15)
            Button:
                text: 'Easy'
                background_color: (0, 1, 0, 1)
                on_press: root.on_easy()
            Button:
                text: 'Medium'
                background_color: (1, 1, 0, 1)
                on_press: root.on_medium()
            Button:
                text: 'Hard'
                background_color: (1, 0, 0, 1)
                on_press: root.on_hard()