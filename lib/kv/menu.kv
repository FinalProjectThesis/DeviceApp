<MenuScreen>:
    name: 'menu'
    BoxLayout:
        orientation: 'vertical'
        RelativeLayout:
            size_hint: 1, .2
            Button:
                text: 'Top Bar (Go back) '
                # size_hint: 1, .2
                pos_y: 'top'
                on_press: root.manager.current = 'childlist'
        BoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            Label:
                text: 'Learn'
                font_size: dp(20)
                size_hint: 1, .1
            StackLayout:
                id: main_bar
                padding: dp(20)
                spacing: dp(5)
                Button:
                    text: 'Addition'
                    size_hint: .5, .5
                    on_press: root.on_addition(); root.manager.current = 'difficulty'
                Button:
                    text: 'Subtraction'
                    size_hint: .5, .5
                    on_press: root.on_subtraction(); root.manager.current = 'difficulty'
                Button:
                    text: 'Multiplication'
                    size_hint: .5, .5
                    on_press: root.on_multiplication(); root.manager.current = 'difficulty'
                Button:
                    text: 'Divison'
                    size_hint: .5, .5
                    on_press: root.on_division(); root.manager.current = 'difficulty'

<DifficultyScreen>:
    name: 'difficulty'
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#2D3436')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .3
            Label:
                id: op_label
                font_size: dp(20)
                size_hint: 1, .4
            Label:
                text: 'Choose your difficulty'
                font_size: dp(25)
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .7
            spacing: dp(15)
            Button:
                text: 'Easy'
                background_color: (0, 1, 0, 1)
                on_press: root.on_easy()
            Button:
                text: 'Medium'
                background_color: (1, 1, 0, 1)
                on_press: root.on_medium()
            Button:
                text: 'Hard'
                background_color: (1, 0, 0, 1)
                on_press: root.on_hard()